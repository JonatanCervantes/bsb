<resources>

    <style name="AppNavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/AppNavigationViewItemTextAppearance</item>
<!--        <item name="itemIconTint">@color/fullWhite</item>-->
        <item name="itemTextColor">@color/dustyWhite</item>
    </style>

    <style name="AppNavigationViewItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="fontFamily">@font/qhytsdakx</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="background">@drawable/background_buttons</item>
        <item name="android:background">@drawable/background_buttons</item>
        <item name="backgroundTint">@color/fullWhite</item>
        <item name="android:textColor">@color/textoBotones</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_buttons</item>
        <item name="background">@drawable/background_buttons</item>
        <item name="backgroundTint">@color/fullWhite</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/dustyWhite</item>
        <item name="android:textColorHint">@color/dustyWhite</item>
    </style>

    <style name="checkBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/dustyWhite</item>
    </style>

    <style name="spinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/dustyWhite</item>
        <item name="itemTextColor">@color/dustyWhite</item>
        <item name="android:textColorSecondary">@color/dustyWhite</item>
    </style>
    <style name="spinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/dustyWhite</item>
        <item name="itemTextColor">@color/dustyWhite</item>
        <item name="android:textColorSecondary">@color/dustyWhite</item>

    </style>

    <style name="textViewDialog" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dustyWhite</item>
        <item name="backgroundTint">@color/transparentBackground</item>

        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">3dp</item>

    </style>

    <style name="fragmentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textViewStyle">@style/textViewDialog</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="editTextStyle">@style/editText</item>

        <item name="android:windowBackground">@color/transparentBackground</item>


        <!--
        <item name="android:windowBackground">@drawable/background_citas_default</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItem</item>
        <item name="android:spinnerItemStyle">@style/spinnerItem</item>
        <item name="android:textColorSecondary">@color/dustyWhite</item>
              -->

    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/dustyWhite</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@drawable/background_main_theme</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/qhytsdakx</item>
<!--        Esta propiedad le da el color a los iconos del navigation drawer-->
        <item name="android:textColorSecondary">@color/dustyWhite</item>
        <item name="android:textColor">@color/dustyWhite</item>
        <item name="android:dialogTheme">@style/fragmentDialog</item>

        <item name="navigationViewStyle">@style/AppNavigationViewStyle</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="checkboxStyle">@style/checkBox</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="imageButtonStyle">@style/imageButton</item>


    </style>










</resources>
