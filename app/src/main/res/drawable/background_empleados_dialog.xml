<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"

                android:startColor="@color/primaryBackground"
                android:centerColor="@color/middleBackgroundEmpleados"
                android:endColor="@color/secondaryBackground"
                android:type="linear"/>
